{
    "manifest_version": 3,
    "name": "Audience Selection",
    "version": "1.0",
    "description": "Analyze the Google sheet and select the audience through Gemini for your next event.",
    "permissions": ["identity", "sidePanel"],
    "host_permissions": [
      "https://sheets.googleapis.com/*"
    ],
    "side_panel": {
      "default_path": "popup.html"
    },
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_icon": "icons/icon48.png",
      "default_popup": "popup.html",
      "default_title": "Audience Selection"
    },
    "oauth2": {
      "client_id": "",
      "scopes": [
        "https://www.googleapis.com/auth/spreadsheets"
     ]}
   
}